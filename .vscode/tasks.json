{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "label": "pnpm: dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["lint"],
      "label": "pnpm: lint",
      "problemMatcher": ["$eslint-stylish"]
    }
  ]
}
